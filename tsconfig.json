{
  "compilerOptions": {
    "moduleResolution": "Node",
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "dist",
    "tsBuildInfoFile": ".tsbuildinfo",
    "lib": ["ES2020"],
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "incremental": true,
    "allowJs": false
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
